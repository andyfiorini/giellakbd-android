<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <TextView
        android:id="@+id/tv_dictitem_word"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="?android:selectableItemBackground"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:textSize="18sp"
        android:paddingStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iv_dictitem_remove"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Sampleword" />

    <ImageView
        android:id="@+id/iv_dictitem_remove"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:padding="8dp"
        android:background="?android:selectableItemBackground"
        android:contentDescription="@string/delete_word"
        android:alpha="0.3"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:src="@drawable/vd_delete"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_dictitem_word"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Sampleword" />

</merge>